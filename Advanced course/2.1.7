n = input()
a = list(n[::-1])    #превращаем в список и переворачиваем
new = []    #список в котором будет храниться окончательный ответ
cou = 0    #счётчик до 3 чтобы знать когда ставить запятую
ppc = 0    #счетчик который обезопасивает и следит чтобы мы не поставили запятую в начале числа
for i in range(len(a)):
    new.append(a[i])    #добавляем в окончательный список элемент
    cou+=1    # счетчик до 3-х
    ppc+=1    #глобальный счетчик
    if cou==3 and ppc!=len(n):    #проверяем если соблюдены условия
        new.append(",")    #добавляем в список запятую в конец
        cou=0    #обнуляем счетчик который считает только до 3-х
print("".join(new[::-1]))        #Соединяем элементы 
