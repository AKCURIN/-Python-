import random


n = random.randrange(1,100)
print('Добро пожаловать в числовую угадайку')

def is_valid(num):
    return num.isdigit() and 1 <= int(num) <= 100
        
def progon():  
    counter = 0
    while True:
        counter+=1
        print("Введите число от 1 до 100")
        s = input()
        if is_valid(s) == False:
            print('А может быть все-таки введем целое число от 1 до 100?')
        else:
            s = int(s)
            if s < n:
                print('Ваше число меньше загаданного, попробуйте еще разок')
            elif s > n:
                print('Ваше число больше загаданного, попробуйте еще разок')
            else:
                print('Вы угадали, поздравляем!')
                print("Использовано:",counter,"попыток")
                print('Спасибо, что играли в числовую угадайку. Еще увидимся...')
                print("Возможно ты хочешь попробовать сыграть снова? Ответь Д или Н")
                break
progon()

def debut_2():  
    counter = 0
    gran = int(input("Ведите правую границу диапазона:"))   #прав гран диапазона
    num_2 = random.randrange(1,gran)
    while True:
        counter+=1
        print(f"Введите число от 1 до {gran}")
        s = input()
        if is_valid(s) == False:
            print('А может быть все-таки введем целое число от 1 до 100?')
        else:
            s = int(s)
            if s < n:
                print('Ваше число меньше загаданного, попробуйте еще разок')
            elif s > n:
                print('Ваше число больше загаданного, попробуйте еще разок')
            else:
                print('Вы угадали, поздравляем!')
                print("Использовано:",counter,"попыток")
                print('Спасибо, что играли в числовую угадайку. Еще увидимся...')
                print("Возможно ты хочешь попробовать сыграть снова? Ответь Д или Н")
                break

def game():
    while True:
        answer = input()
        if answer not in "Д, Н":
            print("Введи нормально ответ что хочешь?")
        elif answer=="Д":
            debut_2()
        else:
            print("Всего доброго!")
game()
